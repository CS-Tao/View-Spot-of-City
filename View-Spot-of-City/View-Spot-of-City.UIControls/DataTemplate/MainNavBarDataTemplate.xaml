<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:viewModel="clr-namespace:View_Spot_of_City.ViewModel"
                    xmlns:local="clr-namespace:View_Spot_of_City.DataTemplate">
    
    <DataTemplate x:Key="MainNavBarItemTemplate" DataType="viewModel:OverlayerItemViewModel">
        <StackPanel Orientation="Horizontal" >
            <Image Source="{Binding IconPath}" Height="40" Width="40" VerticalAlignment="Center"/>
            <Rectangle Width="6" VerticalAlignment="Stretch" Fill="Transparent"/>
            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" FontSize="20"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>