<UserControl x:Class="View_Spot_of_City.UIControls.UIcontrol.MyMessageBox_YesNoCancel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View_Spot_of_City.UIControls.UIcontrol"
             mc:Ignorable="d"
             Height="auto" Width="auto" Background="Transparent">
    <StackPanel Height="auto" Width="auto" Orientation="Horizontal">
        <Button Content="{DynamicResource MessageBox_Yes}" FontSize="12" Width="auto" Height="auto" MinWidth="70" MaxWidth="100" Margin="20,5,5,5" IsDefault="True" Click="YesButton_Click"/>
        <Button Content="{DynamicResource MessageBox_No}" FontSize="12" Width="auto" Height="auto" MinWidth="70" MaxWidth="100" Margin="5,5,5,5" IsDefault="True" Click="NoButton_Click"/>
        <Button Content="{DynamicResource MessageBox_Cancel}" FontSize="12" Width="auto" Height="auto" MinWidth="70" MaxWidth="100" Margin="5,5,20,5" IsDefault="True" Click="CancelButton_Click"/>
    </StackPanel>
</UserControl>
