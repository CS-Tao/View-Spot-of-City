<Window x:Class="View_Spot_of_City.UIControls.Form.LoginDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View_Spot_of_City.UIControls.Form"
        xmlns:control="clr-namespace:View_Spot_of_City.UIControls.UIcontrol"
        xmlns:uicommands="clr-namespace:View_Spot_of_City.UIControls.Command"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Title="{Binding ElementName=ContentManager, Path=Title}">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static uicommands:LoginDlgCommands.OKAndCloseFormCommand}" Executed="OKAndCloseFormCommandBinding_Executed"/>
        <CommandBinding Command="{x:Static uicommands:LoginDlgCommands.CancelAndCloseFormCommand}" Executed="CancelAndCloseFormCommandBinding_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <control:Login x:Name="ContentManager"></control:Login>
    </Grid>
</Window>
